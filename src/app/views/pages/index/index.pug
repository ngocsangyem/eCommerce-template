extends ../../_layouts/_layout

block var
	- title = 'Home'
	- bodyClass = 'home'

include @/components/button/button
include @/components/form-item/form-item


block main
	include @/components/header/header
	+form-item({
		label: 'text label',
		class: 'form-item--icon-left',
		icon: {
			visible: true,
		},
		field: {
			placeholder: 'Enter...'
		}
	})
	+form-item({
		label: 'text label',
		class: 'form-item__search form-item__search--right',
		icon: {
			visible: true,
		},
		field: {
			placeholder: 'Enter...',
		},
		icon: {
			visible: true,
			template: '<button class="search-btn reset form-control--float"><svg class="icon" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg"> <path d="M22.9833 28.5833C29.4266 28.5833 34.65 23.36 34.65 16.9167C34.65 10.4733 29.4266 5.25 22.9833 5.25C16.54 5.25 11.3167 10.4733 11.3167 16.9167C11.3167 23.36 16.54 28.5833 22.9833 28.5833Z" stroke="#151515" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="bevel"/> <path d="M14.5335 25.5999L6.7168 33.4165" stroke="#151515" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="bevel"/> </svg></button>'
		}
	})

	+form-item({
		label: 'text label',
		class: 'form-item__select form-item--icon-right js-select',
		icon: {
			visible: true,
			template: '<svg class="icon form-control--float" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg"> <path d="M27.9665 14.5002L21.1165 7.65018C20.8042 7.33976 20.3818 7.16553 19.9415 7.16553C19.5012 7.16553 19.0788 7.33976 18.7665 7.65018L12.0999 14.3168" stroke="#151515" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="bevel"/> <path d="M12.0332 25.5L18.8832 32.35C19.1955 32.6604 19.6179 32.8347 20.0582 32.8347C20.4985 32.8347 20.9209 32.6604 21.2332 32.35L27.8999 25.6833" stroke="#151515" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="bevel"/> </svg>'
		},
		field: {
			element: 'select',
			class: '',
			options: [
				{
					name: 'Value 1',
					value: '1'
				},
				{
					name: 'Value 2',
					value: '2'
				}
			],
			placeholder: 'Select your option',
			id: 'selectValue'
		},
	})(data-trigger-class="custom-select")
